<div class="event-display">

<h1><%= @event.name %></h1>
<h3><%= @event.tagline %></h3>
<h4><%= @event.dateline %></h4>

<div style="width:80%;padding:6px 0;border-top:solid #000 2px;border-bottom:solid #000 2px;margin-bottom:10px"><%= @event.desc %></div>

<% if @event.reg_expires then %>
  Online Registration Expires: <%= @event.reg_expires.strftime('%b %d, %Y') %><br />
  <%= link_to "Register Online Now!", new_registration_path(:event => @event.key) %><br />
  <br />
<% else %>
  Online Registration Not Available.<br />
  <br />
<% end %>

<% if @event.map_link then %><%= link_to "Map to Event", @event.map_link %> | <% end %>
<% if @event.hotel_link then %><%= link_to "Hotel Information", @event.hotel_link %> | <% end %>
<% if @event.poster_link then %><%= link_to "Download Poster", @event.poster_link %> | <% end %>
<% if @event.brochure_link then %><%= link_to "Download Brochure", @event.brochure_link %><% end %>

</div>


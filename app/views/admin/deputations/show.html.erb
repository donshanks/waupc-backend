<% require 'uri' %>
<div class="page-title">
	<h2>Deputation Details</h2>
</div>
<div class="main-content">

	<p style="color: green"><%= flash[:notice] %></p>

	<table class="deputations-table edit">
		<tr>
			<th>Missionary:</th>
			<td><%= link_to @deputation.missionary.name, missionary_path(@deputation.missionary) %></td>
		</tr>
		<tr>
			<th>Start Date:</th>
			<td><%= @deputation.date_start %></td>
		</tr>
		<tr>
			<th>End Date:</th>
			<td><%= @deputation.date_end %></td>
		</tr>
		<tr>
			<th>Method of Travel:</th>
			<td><%= @deputation.method_of_travel %></td>
		</tr>
		<tr>
			<th>Accomodations:</th>
			<td><%= @deputation.accomodations %></td>
		</tr>
		<tr>
			<th>Number in Party:</th>
			<td><%= @deputation.number_in_party %></td>
		</tr>
	</table>

	<h3>Bookings</h3>

	<table class="deputation-booking-table">
		<tr>
			<th class="col1">Date</th>
			<th class="col2">Time</th>
			<th class="col3">Status</th>
			<th class="col4">Church</th>
			<th class="col5"></th>
			<th class="col6"></th>
		</tr>
	</table>

	<% for booking in @deputation.bookings %>
		<% churches = Church.find(:all, 
			:conditions => "status = 'active'", 
			:order => 'church_name ASC') %>
		<% time_of = booking.time_of? ? booking.time_of.strftime('%l:%M %P') : '' %>
		<% form_remote_for booking, :complete => 'booking_update_complete'  do |f| %>  

	<table class="deputation-booking-table" id="tblBooking_<%=booking.id%>">
		<tr>
			<td class="col1"><%= booking.date_of %></td>
			<td class="col2"><%= f.time_select :time_of,
			            { :minute_step => 30 } %></td>
			<td class="col3">
				<select id="booking_status_<%=booking.id%>" name="booking[status]">
				<%= options_for_select %w(open booked reserved cancelled), booking.status %>
				</select>
			</td>
			<td class="col4"><%= f.select :church_id, 
						churches.collect {|p| [p.selector_name,p.id]}, 
						:include_blank => 'Select Church' %></td>
			<td class="col5"><%= f.submit "Update" %></td>
			<td class="col6">
				<input id="btnConfirm_<%=booking.id%>" class="confirm_btn" disabled="disabled" 
					type="button" value="Send Confirmation" 
					onclick="<%= 
						remote_function :url => {
							:controller => 'bookings', 
							:id => booking.id, 
							:action => 'notify'
						} 
					%>" />
			</td>
		</tr>
	</table>

		<% end %>
	<% end %>	

	<br />
	<%= link_to 'Edit', edit_deputation_path(@deputation) %> |
	<%= link_to 'Back', deputations_path %>
	<br />
</div>

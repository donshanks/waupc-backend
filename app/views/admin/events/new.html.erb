<h1>Create New Event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <%= f.label :key %><br />
  <%= f.text_field :key, :maxlength => 50 %><br />
  <%= f.label :name %><br />
  <%= f.text_field :name, :maxlength => 100 %><br />
  <%= f.label :tagline %><br />
  <%= f.text_field :tagline, :maxlength => 100 %><br />
  <%= f.label :dateline %><br />
  <%= f.text_field :dateline, :maxlength => 100 %><br />
  <%= f.label :desc %><br />
  <%= f.text_area :desc %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
